{{#extends 'base'}}

    {{#block "title"}}Fruits{{/block}}

    {{#block "content"}}
        <h1>My Favourite Fruits</h1>
        
        <ul>
        {{!-- for (let f of fruits) --}}
        {{#each fruits}}
            {{!-- this will be each element from the fruit array consecutively --}}
            <li>{{this}}</li>
        {{/each}}
        </ul>
        
        {{#if likesFruit}}
            <div class="alert alert-success">
                I like fruits
            </div>
        {{else}}
            <div class="alert alert-danger">
                I hate fruits
            </div>
        {{/if}}
        
        {{!-- Note: if helper will not work for comparison i.e. ({{#if age == 33}}) --}}

        {{#ifEquals age 33}}
            <div class="alert alert-success">
                Time to be a carpenter
            </div>
        {{else}}
            <div class="alert alert-danger">
                Not time
            </div>
        {{/ifEquals}}

    {{/block}}

{{/extends}}